<h1>Edit</h1>
<div class="col-md-2">
<%= form_for :product, url: product_path(@product), method: :patch do |f| %>


      <%= f.label :name %><br>
      <%= f.text_field :name, :class => "form-control" %>



      <%= f.submit %>


<% end %>

<%= link_to 'Back to products', products_path,  :class => "btn btn-primary" %>
</div>